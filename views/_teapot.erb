<% height = 275.0 # the height of the open space   %>
<% offset = 95.0 # the offset at the top of the image   %>

<% tea_height = (percent_fill.to_f/100.0)*height # the height of the tea in the pot   %>

<% tea_height = height if tea_height > height %>

<% style = "height:#{tea_height}px;top:#{(height-(tea_height))+offset}px;" %>

<div id="teapot-holder">
  <div class='teapot-back'>
    <img class=teapot-border src='/teapot-border.png'/>

    <div class=teapot-fill
         id=tea
         style='<%= style %>'>
    </div>
  </div>
</div>


<script type="text/javascript">
  start_polling();
</script>